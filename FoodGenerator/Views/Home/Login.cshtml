@model LoginModel

<div class="container">

<div class="row">
    <div class="col-md-4">
        <section>
            @using(Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <h2>Logowanko</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Hasło</label>
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="hasło" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <button class="btn btn-primary" type="submit">Zaloguj siem</button>
                </div>
            }
        </section>
    </div>
</div>

</div>